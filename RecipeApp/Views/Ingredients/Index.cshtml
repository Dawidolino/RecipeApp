@model IEnumerable<RecipeApp.Models.Ingredient>

<h2>Lista składników</h2>

<a asp-action="Create" class="btn btn-success">Dodaj składnik</a>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Opcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model)
        {
            <tr>
                <td>@ingredient.IngredientName</td>
                <td>@ingredient.IngredientDescription</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
